<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" 
        >
        <TextView
            android:layout_weight="0.9"
            android:id="@+id/agent_replenish_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2014-06-23"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/agent_little_size13" />
        
        <RelativeLayout
            android:layout_weight="0.7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
			<ImageView
			   android:visibility="gone"
	           android:id="@+id/agent_replenish_line_vertical_img"
	           android:layout_width="wrap_content"
	           android:layout_height="20dp"
	           android:gravity="left"
	           android:background="@drawable/line"/>
	        <TextView
	            android:id="@+id/agent_replenish_book"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="left"
	            android:layout_marginLeft="5dp"
	            android:layout_toRightOf="@id/agent_replenish_line_vertical_img"
	            android:text="自订刷卡器20台"
	            android:textColor="@color/text_color_gray"
	            android:textSize="@dimen/agent_little_size13" />
		</RelativeLayout>
		
        <TextView
            android:layout_weight="1"
            android:id="@+id/agent_replenish_send"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="未发货"
            android:textColor="@color/text_color_yellow"
            android:textSize="@dimen/agent_little_size13" />

        <LinearLayout
            android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_vertical"
	        >
	        <Button
	            android:id="@+id/agent_replenish_get"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/agent_button_style"
	            android:gravity="center"
	            android:layout_marginLeft="5dp"
	            android:layout_marginRight="5dp"
	            android:text="收货"
	            android:textColor="@drawable/agent_button_text_color_style"
	            android:focusable="false"
	            android:textSize="@dimen/agent_little_size13" />
	        <TextView
	            android:visibility="gone"
	            android:id="@+id/agent_replenish_get_tv"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:text="已收"
	            android:textColor="@color/text_color_blue"
	            android:textSize="@dimen/agent_little_size13" />
    	</LinearLayout>
    	
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

</LinearLayout>