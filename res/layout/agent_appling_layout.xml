<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/light_gray"
    style="@style/agent_padding_style"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/agent_applying_agreement_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        style="@style/agent_padding_style">
        
        <LinearLayout 
            android:id="@+id/agent_appling_bt_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:paddingTop="10dp"
            android:paddingBottom="10dp"
	        android:orientation="horizontal">
    	
	        <Button
	            android:id="@+id/agent_appling_refuse_btn"
	            android:layout_weight="1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:paddingTop="10dp"
            	android:paddingBottom="10dp"
	            android:background="@color/agent_blue"
	            android:text="拒绝"
	            android:textColor="@color/text_color_white"
	            android:textSize="@dimen/agent_button_textsize" />
	        <Button
	            android:id="@+id/agent_appling_agree_btn"
	            android:layout_weight="1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:paddingTop="10dp"
            	android:paddingBottom="10dp"
	            android:background="@color/agent_orange"
	            android:text="同意"
	            android:textColor="@color/text_color_white"
	            android:textSize="@dimen/agent_button_textsize" />
        </LinearLayout>
        
        
        <ScrollView
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_above="@id/agent_appling_bt_layout"
	        android:background="@drawable/square"
	        style="@style/agent_padding_style"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="30dp" 
		    >
	        <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:orientation="vertical">
    		<TextView 
	            android:id="@+id/agent_appling_agreement_tv"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:textColor="@color/gray"
	            android:textSize="@dimen/agent_content_size"
	            android:text="通付宝代理商协议"/>
	        <TextView 
	            android:id="@+id/agent_appling_agreement_tv"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_marginTop="10dp"
	            android:gravity="center"
	            android:textColor="@color/gray"
	            android:textSize="@dimen/agent_content_size"
	            android:text="代理商申请协议
代理商申请协议
代理商申请协议
代理商申请协议
代理商申请协议
代理商申请协议
代理商申请协议
代理商申请协议
代理商申请协议
代理商申请协议
代理商申请协议
代理商申请协议
代理商申请协议
