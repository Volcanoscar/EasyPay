<?xml version="1.0" encoding="utf-8"?>
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:background="@color/agent_apply_blue_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
        <ScrollView 
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent">
        <LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="vertical">
        
         <LinearLayout 
            android:layout_weight="1.5"
            android:id="@+id/agent_appling_tv_layout"
            android:layout_above="@id/agent_appling_bt_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:orientation="vertical">
	        <ImageView
	            android:id="@+id/agent_appling_img"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:gravity="center"
		        android:background="@drawable/agent_apply_img"
			    >
	        </ImageView>
         </LinearLayout>
        
        <LinearLayout 
            android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        style="@style/agent_padding_style"
	        android:orientation="vertical">
	        
            <TextView
                android:id="@+id/agent_appling_tv"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="通付宝钱包代理商功能说明"
		        android:textColor="@color/agent_apply_yellow"
		        android:textSize="@dimen/agent_button_textsize"
                />
            <TextView
                android:id="@+id/agent_appling_tv"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:layout_marginBottom="10dp"
		        android:textColor="@color/text_color_white"
		        android:text="高额销售差价+持续业务分润，收益享不停！\n高额的销售差价诱惑，每卖一台手机刷卡器，最高可享受高达约60%的利润！并且卖机器赚钱，发展APP用户更赚钱！\n代理商发展的每一位用户（有无刷卡器均可）使用业务功能带来的利润，均可享受不低于12.5%的分成。未来新功能上市所产生的利润，也均享受不低于12.5%的业务分成！\n一次投入，终生分润，坐享财富！"
                />
        
        
        <LinearLayout 
            android:id="@+id/agent_appling_bt_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        style="@style/agent_padding_style"
	        android:orientation="horizontal"
	        android:gravity="center">
    	
	        <Button
	            android:id="@+id/agent_apply_btn"
	            android:layout_weight="1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
	            android:background="@drawable/weg_button_style"
	            android:text="一键体验"
	            android:textColor="@color/text_color_white"
	            android:textSize="@dimen/agent_button_textsize" />
	        <Button
	            android:id="@+id/agent_login_btn"
	            android:layout_weight="1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:paddingTop="10dp"
                android:paddingBottom="10dp"
	            android:background="@drawable/default_blue_btn_action"
	            android:text="正式申请"
	            android:textColor="@color/text_color_white"
	            android:textSize="@dimen/agent_button_textsize" />
        </LinearLayout>
        
        </LinearLayout>
        </LinearLayout>
        </ScrollView>
    </LinearLayout>  
   