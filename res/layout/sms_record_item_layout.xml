<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mybank_layout_id"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >
	
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    	<ImageView
            android:id="@+id/img_bank_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:background="@drawable/sms_record_img"
           />
    
    
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:gravity="center_vertical">
	    
        <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" 
	        android:gravity="center_vertical">
	        <TextView
		        android:layout_weight="1"
	            android:id="@+id/phone"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:gravity="left"
	            android:text="159****2029"
	            android:textColor="@color/text_color_gray"
	            android:textSize="@dimen/agent_little_size" />
	        <TextView
	            android:layout_weight="1"
	            android:id="@+id/money"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:gravity="left"
	            android:text="+300.00"
	            android:textColor="@color/text_color_yellow"
	            android:textSize="@dimen/agent_little_size" />
    	</LinearLayout>
        <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" 
	        android:gravity="center_vertical">
	        <TextView
	            android:layout_weight="1"
	            android:id="@+id/date"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:gravity="left"
	            android:text="10-05"
	            android:textColor="@color/text_color_gray"
	            android:textSize="@dimen/agent_little_size12" />
	        <TextView
	            android:layout_weight="1"
	            android:id="@+id/status"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:gravity="left"
	            android:text="交易成功"
	            android:textColor="@color/text_color_gray"
	            android:textSize="@dimen/agent_little_size12" />
    	</LinearLayout>
    </LinearLayout>
	
	</LinearLayout>
	<View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/gray" />
</LinearLayout>