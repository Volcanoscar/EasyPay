<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D7AC2"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_tfbcard" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/empty"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_gototgbcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_tfbcard_coupon"
            android:textColor="@color/white"
            android:paddingLeft="16dp"
            android:text="商户收款"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/btn_tfbcard_coupon" />

        <Button
            android:id="@+id/btn_gotorecharge"
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="优惠卡充值"
            android:visibility="gone"
            android:background="@drawable/btn_tfbcard_recharge" />
    </LinearLayout>

    <View
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>