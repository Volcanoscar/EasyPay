<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@color/agent_gray_bg"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
        <TextView 
            android:id="@+id/cancel_tv"
            android:layout_weight="1"
            android:layout_height="wrap_content"
        	android:layout_width="wrap_content"
        	android:gravity="left"
        	android:text="取消"
        	android:textColor="@color/agent_blue"
            />
        <TextView 
            android:id="@+id/ok_tv"
            android:layout_weight="1"
            android:layout_height="wrap_content"
        	android:layout_width="wrap_content"
        	android:gravity="right"
        	android:text="确定"
        	android:textColor="@color/agent_blue"
            />
    </LinearLayout>
      
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        >
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:orientation="vertical"
	        android:gravity="center"
	        >
	      	<LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        >
	      		<Button 
	      		    android:id="@+id/star_nolimit"
	      		    android:layout_weight="1"
	      		    android:layout_width="fill_parent"
	      		    android:layout_height="wrap_content"
	      		    style="@style/hotel_button_style"
	      		    android:background="@drawable/hotel_button_bg_style"
	      		    android:text="不限"
	      		    />
	      		<Button 
	      		    android:id="@+id/star_kuaijie"
	      		    android:layout_weight="1"
	      		    android:layout_width="fill_parent"
	      		    android:layout_height="wrap_content"
	      		    style="@style/hotel_button_style"
	      		    android:background="@drawable/hotel_button_bg_style"
	      		    android:text="快捷连锁"
	      		    />
	    	</LinearLayout>
	      	<LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_marginTop="10dp"
		        >
	      		<Button 
	      		    android:id="@+id/star_level2"
	      		    android:layout_weight="1"
	      		    android:layout_width="fill_parent"
	      		    android:layout_height="wrap_content"
	      		    style="@style/hotel_button_style"
	      		    android:background="@drawable/hotel_button_bg_style"
	      		    android:text="二星级以下"
	      		    />
	      		<Button 
	      		    android:id="@+id/star_level3"
	      		    android:layout_weight="1"
	      		    android:layout_width="fill_parent"
	      		    android:layout_height="wrap_content"
	      		    style="@style/hotel_button_style"
	      		    android:background="@drawable/hotel_button_bg_style"
	      		    android:text="三星级/舒适"
	      		    />
	    	</LinearLayout>
	    	
	      	<LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_marginTop="10dp"
		        >
	      		<Button 
	      		    android:id="@+id/star_level4"
	      		    android:layout_weight="1"
	      		    android:layout_width="fill_parent"
	      		    android:layout_height="wrap_content"
	      		    style="@style/hotel_button_style"
	      		    android:background="@drawable/hotel_button_bg_style"
	      		    android:text="四星级/高档"
	      		    />
	      		<Button 
	      		    android:id="@+id/star_level5"
	      		    android:layout_weight="1"
	      		    android:layout_width="fill_parent"
	      		    android:layout_height="wrap_content"
	      		    style="@style/hotel_button_style"
	      		    android:background="@drawable/hotel_button_bg_style"
	      		    android:text="五星级/豪华"
	      		    />
	    	</LinearLayout>
	    </LinearLayout>
	 </ScrollView>  
	
</LinearLayout>