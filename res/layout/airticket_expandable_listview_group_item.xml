<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:groupIndicator="@null"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/groupImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bluedot" />

        <TextView
            android:id="@+id/groupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/groupImage"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:text="娱乐类收益"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/content_size" />
	</RelativeLayout>
	
	<RelativeLayout
	    android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        
	    <ImageView
            android:id="@+id/groupIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/detailbtn"
            android:visibility="gone"
           />
	    
        <TextView
            android:id="@+id/groupMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/groupIndicator"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text="428.00"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/agent_little_size" 
            android:visibility="gone"/>
        
    </RelativeLayout>

</LinearLayout>