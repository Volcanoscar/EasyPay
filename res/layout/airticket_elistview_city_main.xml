<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tfbbar="http://schemas.android.com/apk/res/com.inter.trade"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/airticket_start_city_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" 
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/selector_air_city_navigation">
            
            <Button
                android:id="@+id/airticket_start_city"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="#00000000"
                android:drawableLeft="@drawable/air_city_start_icon_selector"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:hint=""
                android:singleLine="true"
                android:text="出发"
                android:textColor="@color/air_d_w_textview_selector"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/airticket_end_city_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" 
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/selector_air_city_navigation">

            <Button
                android:id="@+id/airticket_end_city"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="#00000000"
                android:drawableLeft="@drawable/air_city_end_icon_selector"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:hint=""
                android:singleLine="true"
                android:text="到达"
                android:textColor="@color/air_d_w_textview_selector"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/expandablelist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF"
        android:groupIndicator="@null" >
    </ExpandableListView>

</LinearLayout>