<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
	
    <LinearLayout
        style="@style/corner_margin_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/atte_corners"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/phone_layout"
            style="@style/item_text_padding"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/rigester_phone"
                android:textSize="@dimen/content_size" />

            <EditText
                android:id="@+id/recieve_sms_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/text_color_white"
                android:hint="@string/rigester_phone_prompt"
                android:inputType="number" />
             <TextView
                 android:id="@+id/phone_text"
                 android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/rigester_phone"
                android:textSize="@dimen/content_size" />
        </LinearLayout>
        <include 
            android:id="@+id/my_line"
            layout="@layout/line_layout"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/code_layout"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/smscode"
                android:layout_marginLeft="@dimen/item_padding_left"
                android:layout_marginRight="@dimen/item_padding_right"
                android:layout_marginTop="@dimen/item_padding_top"
                android:layout_marginBottom="@dimen/item_padding_bottom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/text_color_white"
                android:hint="@string/rigester_number_prompt"
                android:inputType="number" />

           <Button
		       android:id="@+id/re_sms_btn"
		       style="@style/btn_single_style"
		       android:layout_marginRight="@dimen/item_padding_right"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:background="@drawable/wihte_btn_action"
		       android:text="@string/btn_re_sms"
		       android:textColor="@color/black"
		       android:textSize="@dimen/little_size" 
		       android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>
	<TextView 
	    android:id="@+id/findprompt"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/content_size"
        android:textColor="@color/gray"
        android:text="@string/forget_pwd"
        />
    <Button
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:id="@+id/get_sms_code"
        style="@style/btn_single_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wihte_btn_action"
        android:text="@string/btn_next"
        android:textColor="@color/black"
        android:textSize="@dimen/content_size" />
    <Button
        android:visibility="gone"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:id="@+id/submit"
        style="@style/btn_single_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wihte_btn_action"
        android:text="@string/btn_submit"
        android:textColor="@color/black"
        android:textSize="@dimen/content_size" />

</LinearLayout>