<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFF3F3F3" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/coupon_layout"
            style="@style/corner_margin_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/atte_corners"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                style="@style/item_text_padding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/coupon_total"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_name_size" />

                <TextView
                    android:id="@+id/acount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="8000.00元"
                    android:textColor="@color/red"
                    android:textSize="@dimen/title_name_size" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginTop="@dimen/margin_top"
            android:text="购买详情"
            android:textColor="@color/gray_bg"
            android:textSize="@dimen/content_size" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_margin="10dp"
            android:background="@color/gray_bg" />

        <LinearLayout
            android:id="@+id/mobile_show_layout"
            style="@style/moblierechange_margin_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/image_in"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:text="通付宝刷卡器"
                android:textColor="@color/gray_bg"
                android:textSize="@dimen/content_size" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/reduce"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/jianhao" />

                <TextView
                    android:id="@+id/produrezheprice"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/content_size" />

                <ImageView
                    android:id="@+id/plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jiahao" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mobile_show_layout"
            style="@style/moblierechange_margin_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/image_in"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="运费"
                android:textColor="@color/gray_bg"
                android:textSize="@dimen/content_size" />

            <TextView
                android:id="@+id/freight"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="0元"
                android:textColor="@color/gray"
                android:textSize="@dimen/content_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mobile_show_layout"
            style="@style/moblierechange_margin_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/image_in"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.5"
                android:text="合计"
                android:textColor="@color/gray_bg"
                android:textSize="@dimen/content_size" />

            <TextView
                android:id="@+id/total"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:text="650元"
                android:textColor="@color/text_color_yellow"
                android:textSize="40sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mobile_show_layout"
            style="@style/moblierechange_margin_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/image_in"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mobile_rechapaymoney"
                android:textColor="@color/black"
                android:textSize="@dimen/content_size" />

            <TextView
                android:id="@+id/mobile_rechapaymoney"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@color/gray"
                android:textSize="@dimen/content_size" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginTop="@dimen/margin_top"
            android:text="收件人信息"
            android:textColor="@color/gray_bg"
            android:textSize="@dimen/content_size" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_margin="10dp"
            android:background="@color/gray_bg" />

        <LinearLayout
            style="@style/item_text_padding_noborder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:text="收件人:"
                android:textColor="@color/gray_bg"
                android:textSize="@dimen/content_size" />

            <EditText
                android:id="@+id/receiver_name_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/default_regist_edit_bg"
                android:enabled="false"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" />
        </LinearLayout>

        <LinearLayout
            style="@style/item_text_padding_noborder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:text="收件人手机号:"
                android:textColor="@color/gray_bg"
                android:textSize="@dimen/content_size" />

            <EditText
                android:id="@+id/receiver_mobile_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/default_regist_edit_bg"
                android:enabled="false"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" />
        </LinearLayout>

        <LinearLayout
            style="@style/item_text_padding_noborder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:text="地址:"
                android:textColor="@color/gray_bg"
                android:textSize="@dimen/content_size" />

            <EditText
                android:id="@+id/receiver_address_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/default_regist_edit_bg"
                android:enabled="false"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" />
        </LinearLayout>

        <LinearLayout
            style="@style/item_text_padding_noborder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:text="激活码："
                android:textColor="@color/gray_bg"
                android:textSize="@dimen/content_size" />

            <EditText
                android:id="@+id/agentid_edittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/default_regist_edit_bg"
                android:enabled="true"
                android:inputType="text"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" />
        </LinearLayout>

        <TextView
            style="@style/item_text_padding_noborder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="提醒：如填写代理商代号，将获得30元的返利。"
            android:textColor="@color/gray_bg"
            android:textSize="@dimen/content_size14"
            android:visibility="gone" />

        <LinearLayout
            style="@style/corner_margin_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/atte_corners"
            android:orientation="vertical" >

            <RelativeLayout
                style="@style/item_text_padding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/image_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/in" />

                <LinearLayout
                    android:id="@+id/bank_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/image_in"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/zhuanzhang_chose_bank"
                        android:textSize="@dimen/content_size" />

                    <TextView
                        android:id="@+id/bank_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="@string/support_bank"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/content_size" />
                </LinearLayout>
            </RelativeLayout>

            <include
                layout="@layout/line_layout"
                android:visibility="gone" />

            <LinearLayout
                style="@style/item_text_padding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal" >

                <TextView
                    android:visibility="gone"
                    android:id="@+id/swip_prompt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:text="@string/cridet_insert"
                    android:textSize="@dimen/content_size" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/swip_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/swip_card_bg"
                        android:focusable="true" />

                    <EditText
                        android:id="@+id/card_edit"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/swip_card"
                        android:background="@color/text_color_white"
                        android:enabled="true"
                        android:hint="请刷卡或输入卡号"
                        android:inputType="number"
                        android:textSize="@dimen/content_size" />
                </RelativeLayout>
            </LinearLayout>

            <include
                layout="@layout/line_layout"
                android:visibility="visible" />
            <!--
            <RelativeLayout
                style="@style/item_text_padding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/image_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/in" />

                <LinearLayout
                    android:id="@+id/bank_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/image_in"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/zhuanzhang_chose_bank"
                        android:textColor="@color/black"
                        android:textSize="@dimen/content_size" />

                    <TextView
                        android:id="@+id/bank_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="@string/support_bank"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/content_size" />
                </LinearLayout>
            </RelativeLayout>
            -->

            <LinearLayout
                style="@style/item_text_padding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:text="@string/recharge_cridet_date"
                    android:textSize="@dimen/content_size" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/text_color_white"
                        android:hint="@string/recharge_cridet_year"
                        android:inputType="number" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/text_color_white"
                        android:hint="@string/recharge_cridet_month"
                        android:inputType="number" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/item_text_padding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:text="@string/recharge_cridet_cvn2"
                    android:textSize="@dimen/content_size" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/text_color_white"
                    android:hint="@string/recharge_cridet_cvn2_prompt"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                style="@style/item_text_padding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:text="@string/open_name"
                    android:textSize="@dimen/content_size" />

                <EditText
                    android:id="@+id/open_name_edit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/text_color_white"
                    android:hint="@string/cridet_open_name"
                    android:inputType="text" />
            </LinearLayout>

            <include
                layout="@layout/line_layout"
                android:visibility="gone" />

            <LinearLayout
                style="@style/item_text_padding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:text="@string/zhuangzhang_reciever_phone"
                    android:textSize="@dimen/content_size" />

                <EditText
                    android:id="@+id/open_phone_edit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/text_color_white"
                    android:hint="@string/rigester_phone_prompt"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                style="@style/item_text_padding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/cridet_sms_code"
                    android:textSize="@dimen/content_size" />

                <RelativeLayout
                    android:id="@+id/code_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/re_sms_btn"
                        style="@style/btn_single_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/item_padding_right"
                        android:background="@drawable/wihte_btn_action"
                        android:text="@string/cridet_sms_code_btn"
                        android:textColor="@color/black"
                        android:textSize="@dimen/little_size" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/re_sms_btn"
                        android:background="@color/text_color_white"
                        android:hint="@string/rigester_number_prompt"
                        android:inputType="number"
                        android:textSize="@dimen/little_size" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/cridet_back_btn"
            style="@style/btn_single_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            android:background="@drawable/default_yellow_btn_action"
            android:text="确认支付"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/content_size" />
    </LinearLayout>

</ScrollView>