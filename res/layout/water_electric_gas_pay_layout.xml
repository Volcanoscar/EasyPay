<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:background="@color/light_gray"
	style="@style/agent_padding_style"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		
	    <RelativeLayout
	        android:visibility="gone"
	        android:id="@+id/province_select_layout"
	        android:orientation="horizontal"
	        android:background="@drawable/atte_corners"
	        style="@style/agent_padding_style"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
	        >
			<ImageView
	            android:id="@+id/image_in"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:background="@drawable/next_page" />
			<TextView 
				android:id="@+id/tv_province"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_toLeftOf="@id/image_in"
				android:scrollHorizontally="true"
				android:layout_centerVertical="true"
				android:background="@color/text_color_white"
				android:textSize="@dimen/agent_content_size"
				android:enabled="false"
				android:text="请选择所在省份"
			/>
		</RelativeLayout>
		
	    <RelativeLayout
	        android:id="@+id/city_select_layout"
	        android:orientation="horizontal"
	        android:background="@drawable/atte_corners"
	        style="@style/agent_padding_style"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
	        >
			<ImageView
	            android:id="@+id/image_in"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:background="@drawable/next_page" />
			<EditText 
				android:id="@+id/city_edit"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_toLeftOf="@id/image_in"
				android:scrollHorizontally="true"
				android:layout_centerVertical="true"
				android:background="@color/text_color_white"
				android:textSize="@dimen/agent_content_size"
				android:enabled="false"
				android:text="请选择所在城市"
			/>
		</RelativeLayout>
		
	     <RelativeLayout
	        android:id="@+id/product_select_layout"
	        android:orientation="horizontal"
	        android:background="@drawable/atte_corners"
	        style="@style/agent_padding_style"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:visibility="gone"
	        >
			<ImageView
	            android:id="@+id/image_hihi"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:background="@drawable/next_page" />
			<TextView 
				android:id="@+id/tv_product"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_toLeftOf="@id/image_hihi"
				android:scrollHorizontally="true"
				android:layout_centerVertical="true"
				android:background="@color/text_color_white"
				android:textSize="@dimen/agent_content_size"
				android:enabled="false"
				android:text="请选择消费项目"
			/>
		</RelativeLayout>
		
	    <LinearLayout 
	        android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:layout_marginTop="20dp"
	        android:layout_marginBottom="30dp"
	        >
			
	        <ImageButton
	            android:layout_weight="1" 
		        android:id="@+id/water_pay_imgbtn"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="2dp"
		        android:layout_marginRight="2dp"
		        android:background="@drawable/water_pay_button_style"
		        android:gravity="center"/>
	        <ImageButton
	            android:layout_weight="1" 
		        android:id="@+id/electric_pay_imgbtn"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="2dp"
		        android:layout_marginRight="2dp"
		        android:background="@drawable/electric_pay_button_style"
		        android:gravity="center"/>
	        <ImageButton
	            android:layout_weight="1" 
		        android:id="@+id/gas_pay_imgbtn"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="2dp"
		        android:layout_marginRight="2dp"
		        android:background="@drawable/gas_pay_button_style"
		        android:gravity="center"/>
	        
		</LinearLayout>
		
	    <LinearLayout 
	        android:id="@+id/notes_layout"
	        android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:layout_marginTop="20dp"
	        android:layout_marginBottom="10dp"
	        >
	        
	        <ImageView 
	            android:id="@+id/notes_img"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="2dp"
		        android:layout_marginRight="2dp"
		        android:background="@drawable/warning_icon"
		        android:gravity="center"/>
		    <TextView
			        android:id="@+id/notes_tv"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:textColor="@color/text_color_gray"
			        android:textSize="@dimen/agent_main_content_size"
			        android:text="点击查看注意事项!"/>
		</LinearLayout>
	</LinearLayout>
</ScrollView>