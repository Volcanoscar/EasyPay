<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/title_layout"
    android:orientation="vertical"
    android:background="@drawable/title_bg"
    >
	<Button
	    android:id="@+id/back_btn" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/title_back_action"
	    android:layout_alignParentLeft="true"
	    />
	<Button
	    android:id="@+id/title_menu_btn" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:visibility="gone"
	     android:background="@drawable/left_menu"
	    />
	<Button
	    android:id="@+id/title_right_btn" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/text_color_white"
	    android:layout_marginRight="@dimen/margin_right"
	    android:text="@string/cridet_pay_detial"
	    android:background="@drawable/right_btn_action"
	    android:layout_alignParentRight="true"
	    android:visibility="gone"
	    android:layout_centerVertical="true"
	    />
	<Button
	    android:id="@+id/title_right_btn_two" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/text_color_white"
	    android:layout_marginRight="@dimen/margin_right"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:background="@drawable/icon_list"
	    android:visibility="gone"
	    />
	<Button
	    android:id="@+id/title_right_btn_three" 
	    android:layout_width="30dp"
	    android:layout_height="30dp"
	    android:textColor="@color/text_color_white"
	    android:layout_marginRight="@dimen/margin_right"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:background="@drawable/icon_action_new"
	    android:visibility="gone"
	    />
	<TextView 
	    android:id="@+id/title_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/app_name"
	    android:textSize="@dimen/title_name_size"
	    android:textColor="@color/text_color_white"
	    android:layout_centerInParent="true"
	    android:textStyle="bold"
	    />
	<ImageView
	    android:visibility="gone"
        android:id="@+id/agent_title_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:background="@drawable/title_agent"/>
</RelativeLayout>
