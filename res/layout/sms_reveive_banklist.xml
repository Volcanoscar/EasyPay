<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <TextView
            android:id="@+id/bank_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            android:gravity="left"
            android:text="*该账户将作为您的默认收款账户。您可以通过“我的银行卡”菜单进行账户的新增、变更或删除。"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/agent_little_size13" />
    
    <ListView
        android:id="@+id/listview"
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent"
	    android:layout_above="@id/bank_name"
	    android:cacheColorHint="#00000000"
	    android:overScrollMode="never"
	     />
    <TextView
        android:id="@+id/tv_emptyview" 
        android:layout_width="fill_parent" 
	    android:layout_height="fill_parent"
	    android:layout_gravity="center"
	    android:gravity="center"
	    android:text="亲,没有获取到银行卡"
	    android:textColor="@color/gray_bg"
	    android:visibility="invisible"
        />
</RelativeLayout>
