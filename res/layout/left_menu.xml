<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_main" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/left_main_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/left_item_action"
            android:paddingBottom="@dimen/menu_padding_top"
            android:paddingTop="@dimen/menu_padding_top" >

            <ImageView
                android:id="@+id/main_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/menu_left_magin"
                android:background="@drawable/left_index_image" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/menu_text_margin"
                android:layout_toRightOf="@id/main_index"
                android:text="@string/left_main_string"
                android:textSize="@dimen/title_name_size" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/gray" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/more_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/menu_padding_top"
            android:paddingTop="@dimen/menu_padding_top" 
            android:background="@drawable/left_item_action">

            <ImageView
                android:id="@+id/userinfo_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/menu_left_magin"
                android:background="@drawable/secret_image" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" 
                android:background="@drawable/in"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/menu_left_magin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/menu_text_margin"
                android:layout_toRightOf="@id/userinfo_index"
                android:text="@string/account_manage"
                android:textSize="@dimen/title_name_size" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/gray" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/left_bind_agent_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:visibility="visible"
        >

        <RelativeLayout
            android:id="@+id/left_bind_agent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/menu_padding_top"
            android:paddingTop="@dimen/menu_padding_top" 
            android:background="@drawable/left_item_action">

            <ImageView
                android:id="@+id/userinfo_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/menu_left_magin"
                android:background="@drawable/open_shuakaqi" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" 
                android:background="@drawable/in"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/menu_left_magin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/menu_text_margin"
                android:layout_toRightOf="@id/userinfo_index"
                android:text="@string/left_bind_agent"
                android:textSize="@dimen/title_name_size" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/gray" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:visibility="gone"
        >

        <RelativeLayout
            android:id="@+id/left_user_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/menu_padding_top"
            android:paddingTop="@dimen/menu_padding_top" 
            android:background="@drawable/left_item_action">

            <ImageView
                android:id="@+id/userinfo_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/menu_left_magin"
                android:background="@drawable/user_info_image" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" 
                android:background="@drawable/in"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/menu_left_magin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/menu_text_margin"
                android:layout_toRightOf="@id/userinfo_index"
                android:text="@string/left_user_info"
                android:textSize="@dimen/title_name_size" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/gray" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/left_pwd_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/menu_padding_top"
            android:paddingTop="@dimen/menu_padding_top" 
            android:background="@drawable/left_item_action">

            <ImageView
                android:id="@+id/secret_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/menu_left_magin"
                android:background="@drawable/secret_image" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" 
                android:background="@drawable/in"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/menu_left_magin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/menu_text_margin"
                android:layout_toRightOf="@id/secret_index"
                android:text="@string/left_mima"
                android:textSize="@dimen/title_name_size" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/gray" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/left_open_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/menu_padding_top"
            android:paddingTop="@dimen/menu_padding_top"
            android:background="@drawable/left_item_action" 
            >

            <ImageView
                android:id="@+id/shuakaqi_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/menu_left_magin"
                android:background="@drawable/open_shuakaqi" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" 
                android:background="@drawable/in"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/menu_left_magin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/menu_text_margin"
                android:layout_toRightOf="@id/shuakaqi_index"
                android:text="@string/left_open_shuakaqi"
                android:textSize="@dimen/title_name_size" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/gray" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/left_feedback_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/menu_padding_top"
            android:paddingTop="@dimen/menu_padding_top" 
            android:background="@drawable/left_item_action">

            <ImageView
                android:id="@+id/feedback_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/menu_left_magin"
                android:background="@drawable/feedback" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" 
                android:background="@drawable/in"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/menu_left_magin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/menu_text_margin"
                android:layout_toRightOf="@id/feedback_index"
                android:text="@string/left_feedback"
                android:textSize="@dimen/title_name_size" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/gray" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/left_update_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/menu_padding_top"
            android:paddingTop="@dimen/menu_padding_top" 
            android:background="@drawable/left_item_action">

            <ImageView
                android:id="@+id/update_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/menu_left_magin"
                android:background="@drawable/check_update" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" 
                android:background="@drawable/in"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/menu_left_magin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/menu_text_margin"
                android:layout_toRightOf="@id/update_index"
                android:text="@string/left_update"
                android:textSize="@dimen/title_name_size" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/gray" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >
        
        <RelativeLayout
            android:id="@+id/left_help_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/left_item_action"
            android:paddingBottom="@dimen/menu_padding_top"
            android:paddingTop="@dimen/menu_padding_top" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/menu_left_magin"
                android:background="@drawable/in" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/menu_text_margin"
                android:layout_toRightOf="@+id/help_index"
                android:text="@string/left_help"
                android:textSize="@dimen/title_name_size" />

            <ImageView
                android:id="@+id/help_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/imageView1"
                android:layout_marginLeft="40dp"
                android:background="@drawable/about_us" />

        </RelativeLayout>
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/gray" />

        <RelativeLayout
            android:id="@+id/left_about_layout"
            android:background="@drawable/left_item_action"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/menu_padding_top"
            android:paddingTop="@dimen/menu_padding_top" >

            <ImageView
                android:id="@+id/about_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/menu_left_magin"
                android:background="@drawable/user_info_image" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" 
                android:background="@drawable/in"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/menu_left_magin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/menu_text_margin"
                android:layout_toRightOf="@id/about_index"
                android:text="@string/left_about"
                android:textSize="@dimen/title_name_size" />
        </RelativeLayout>

         <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/gray" />
    </LinearLayout>

</LinearLayout>